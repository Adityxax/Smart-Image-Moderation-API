  },

  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "25.2.0",
    "@types/react": "19.2.10",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.2.1",
    "eslint": "^9.0.0",
    "eslint-config-next": "16.1.6",
    "postcss": "^8.4.38",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.4.5"
  }
